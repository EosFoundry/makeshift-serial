{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolvePackageJsonImports": true,
    "declaration": true,
    "declarationDir": "./lib/types"
  },
  "include": [
    "./src/*"
  ],
  "exclude": [
    "./lib"
  ]
}
